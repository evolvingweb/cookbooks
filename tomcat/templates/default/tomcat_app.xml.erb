<?xml version="1.0" encoding="utf-8"?>
<!-- Generated by Chef for '<%= @params[:name] %>' on <%= node[:fqdn] %> -->
<Context docBase="<%= @params[:doc_base] %>" debug="0" crossContext="true">
<%- @params[:env].each do |name,value| %>
  <Environment name="<%= name %>" type="java.lang.String" value="<%= value %>" override="true"/>
<%- end %>
  <Valve className="org.apache.catalina.valves.RemoteAddrValve" allow="<%= @params[:remote_allow] %>"/>
</Context>
